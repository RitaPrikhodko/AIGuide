<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WatchPlaces" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlNormal">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccentOrg</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="defaultInfoSize">@dimen/_12sdp</item>

        <item name="defaultBackgroundColor">@color/white</item>
        <item name="defaultMainBackground">@color/white</item>
        <item name="defaultNavBackground">@color/white_two</item>
        <item name="defaultOverlayBackground">@color/colorSemiTransparent</item>
        <item name="defaultMainGradientDarkColor">@color/l_blue_dark</item>
        <item name="defaultMainGradientLightColor">@color/l_blue_light</item>
        <item name="defaultDarkGradientDarkColor">@color/blue_dark</item>
        <item name="defaultDarkGradientLightColor">@color/blue_light</item>
        <item name="defaultInfoHighLightColor">@color/black</item>
        <item name="defaultInfoAccentColor">@color/colorAccent</item>
        <item name="defaultInfoIconBackgroundColor">@color/info_icon_bg_color</item>
        <item name="defaultSemiTransparentColor">@color/colorSemiTransparent</item>
        <item name="defaultCheckBackgroundColor">@color/l_green_light</item>
        <item name="defaultInfoColor">@color/main_info_color</item>
        <item name="defaultSecInfoColor">@color/secondary_info_color</item>
        <item name="defaultTitleColor">@color/title_color</item>
        <item name="defaultStrokeColor">@color/grey_three</item>
        <item name="defaultActionBackground">@color/red</item>
        <item name="defaultActionTitleColor">@color/white</item>
        <item name="inverseBackgroundColor">@color/black</item>
        <item name="inverseInfoColor">@color/colorLight</item>
        <item name="inverseTitleColor">@color/white</item>
    </style>

    <style name="Theme.WatchPlaces.LocationLabelStyle">
        <item name="android:textColor">?defaultSemiTransparentColor</item>
        <item name="android:textSize">@dimen/_8sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Theme.WatchPlaces.LocationInfoStyle">
        <item name="android:textColor">?defaultInfoColor</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ProgressStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>
</resources>