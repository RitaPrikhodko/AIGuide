<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:color="@color/colorLight"
    tools:targetApi="lollipop"> <!-- ripple effect color -->
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="?attr/defaultSemiTransparentColor" />
        </shape>
    </item>

    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="?attr/defaultActionBackground" />

            <corners
                android:topLeftRadius="@dimen/_4sdp"
                android:topRightRadius="@dimen/_4sdp"
                android:bottomLeftRadius="@dimen/_4sdp"
                android:bottomRightRadius="@dimen/_4sdp"/>
        </shape>
    </item>
</ripple>