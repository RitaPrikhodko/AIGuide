<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:color="@color/colorLight"
    tools:targetApi="lollipop"> <!-- ripple effect color -->
    <item android:id="@android:id/mask">
        <shape android:shape="oval">
            <solid android:color="?attr/defaultSemiTransparentColor" />
        </shape>
    </item>

    <item android:id="@android:id/background">
        <shape
            android:shape="oval">
            <solid android:color="?attr/defaultActionBackground" />
            <stroke android:width="@dimen/_2sdp"
                android:color="@color/arena_main_stroke_color"/>
        </shape>
    </item>
</ripple>